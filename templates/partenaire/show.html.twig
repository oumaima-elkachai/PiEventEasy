{% extends 'baseAdmin.html.twig' %}

{% block title %}Partenaire{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header">
                        <h1 class="card-title">Partenaire</h1>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ partenaire.id }}</td>
                                </tr>
                                <tr>
                                    <th>Nom du partenaire</th>
                                    <td>{{ partenaire.nom}}</td>
                                </tr>
                                <tr>
                                    <th>Numero du téléphone</th>
                                    <td>{{ partenaire.tel}}</td>
                                </tr>
                                <tr>
                                    <th>Donation</th>
                                    <td>{{ partenaire.don }}</td>
                                </tr>
                                <tr>
                                    <th>Image</th>
                                    <td>{{ partenaire.image }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('app_partenaire_index') }}" class="btn btn-secondary">Retour à la liste</a>
                        <a href="{{ path('app_partenaire_edit', {'id': partenaire.id}) }}" class="btn btn-primary">Modifier</a>
                        {{ include('partenaire/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}