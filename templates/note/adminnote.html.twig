{% extends 'baseAdmin.html.twig' %}

{% block title %}Note {% endblock %}

{% block body %}
    {%  block search  %}
        <div class="search-bar">
          <form class="search-form d-flex align-items-center" method="POST" action="#">
            <input id="searchnote" type="text" name="query" placeholder="Search" title="Enter search keyword">
          </form>
        </div><!-- End Search Bar -->
        {% endblock %} 

    <h1>Note index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for note in pagination %}
                <tr>
                <td>{{ note.id }}</td>
                <td>{{ note.description }}</td>
                <td>{{ note.date ? note.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_note_showadmin', {'id': note.id}) }}">show</a>
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
    

        </tbody>
    </table>
    {{ knp_pagination_render(pagination) }}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

	<script>
		$(document).ready(function () {
			// Function to perform the search based on the specified keyword
			function searchOffer(keyword) {
				$(".table tbody tr").each(function () {
					var found = false;
					$(this).find("td").each(function () {
						if ($(this).text().toLowerCase().includes(keyword.toLowerCase())) {
							found = true;
							return false; // Exit the loop
						}
					});
					$(this).toggle(found); // Show/hide the row based on search result
				});
			}
	
			// Event handler for the search input
			$("#searchnote").on("keyup", function () {
				var searchText = $(this).val();
				searchOffer(searchText);
			});
		});
	</script>
{% endblock %}
