{% extends 'baseAdmin.html.twig' %}

{% block title %}Statistiques des Notes{% endblock %}

{% block body %}
    <div class="container">
        <h1>Statistiques des Notes</h1>

        <!-- Graphique √† Barres -->
        <div style="width: 50%; margin: auto;">
            <canvas id="barChart" width="400" height="200"></canvas>
        </div>

        <!-- Graphique en Cercle -->
        <div style="width: 50%; margin: auto;">
            <canvas id="doughnutChart" width="400" height="400"></canvas>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

        <script>
            document.addEventListener('DOMContentLoaded', function () {
                // Graphique √† Barres
                var ctxBar = document.getElementById('barChart').getContext('2d');
                var barChart = new Chart(ctxBar, {
                    type: 'bar',
                    data: {
                        labels: ['üò°', 'üò†', 'üòê', 'üòä', 'üòÑ'],
                        datasets: [{
                            label: 'Nombre de Notes',
                            data: [{{ stats.countAngry }}, {{ stats.countMad }}, {{ stats.countNeutral }}, {{ stats.countHappy }}, {{ stats.countVeryHappy }}],
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.5)',
                                'rgba(255, 206, 86, 0.5)',
                                'rgba(75, 192, 192, 0.5)',
                                'rgba(54, 162, 235, 0.5)',
                                'rgba(153, 102, 255, 0.5)',
                            ],
                            borderColor: [
                                'rgba(255, 99, 132, 1)',
                                'rgba(255, 206, 86, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(153, 102, 255, 1)',
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });

                // Graphique en Cercle
                var ctxDoughnut = document.getElementById('doughnutChart').getContext('2d');
                var doughnutChart = new Chart(ctxDoughnut, {
                    type: 'doughnut',
                    data: {
                        labels: ['üò°', 'üò†', 'üòê', 'üòä', 'üòÑ'],
                        datasets: [{
                            data: [{{ stats.countAngry }}, {{ stats.countMad }}, {{ stats.countNeutral }}, {{ stats.countHappy }}, {{ stats.countVeryHappy }}],
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.5)',
                                'rgba(255, 206, 86, 0.5)',
                                'rgba(75, 192, 192, 0.5)',
                                'rgba(54, 162, 235, 0.5)',
                                'rgba(153, 102, 255, 0.5)',
                            ],
                            borderColor: [
                                'rgba(255, 99, 132, 1)',
                                'rgba(255, 206, 86, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(153, 102, 255, 1)',
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        cutout: '70%', // Contr√¥le la taille du trou au milieu du cercle
                        plugins: {
                            legend: {
                                position: 'bottom', // Repositionne la l√©gende en bas
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        var label = context.label || '';
                                        if (label) {
                                            label += ': ';
                                        }
                                        label += context.formattedValue;
                                        return label;
                                    }
                                }
                            }
                        }
                    }
                });
            });
        </script>
    </div>
{% endblock %}
