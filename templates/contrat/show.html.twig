{% extends 'baseAdmin.html.twig' %}

{% block title %}Contrat{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header">
                        <h1 class="card-title">Contrat</h1>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ contrat.id }}</td>
                                </tr>
                                <tr>
                                    <th>Date de début</th>
                                    <td>{{ contrat.datedebut ? contrat.datedebut|date('Y-m-d') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Date de fin</th>
                                    <td>{{ contrat.datefin ? contrat.datefin|date('Y-m-d') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Partenaire</th>
                                    <td>{{ contrat.partenaire.nom }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('app_contrat_index') }}" class="btn btn-secondary">Retour à la liste</a>
                        <a href="{{ path('app_contrat_edit', {'id': contrat.id}) }}" class="btn btn-primary">Modifier</a>
                        {{ include('contrat/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
